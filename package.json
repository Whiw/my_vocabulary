{
  "name": "my-vocabulary-app",
  "version": "1.0.4",
  "description": "A simple vocabulary learning app.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.gemini.myvocabularyapp",
    "productName": "My Vocabulary",
    "publish": {
      "provider": "github",
      "owner": "Whiw",
      "repo": "my_vocabulary"
    },
    "files": [
      "**/*",
      "!node_modules/electron-builder/**/*",
      "assets/**"
    ],
"extraResources": [
      { "from": "assets/words.tsv",        "to": "words.tsv" },
      { "from": "assets/sample_en_ko.tsv", "to": "sample_en_ko.tsv" },
      { "from": "assets/kakaopay_qr.png", "to": "kakaopay_qr.png" },
      { "from": "assets/toss_qr.jpg",     "to": "toss_qr.jpg" }
    ],
    "win": {
       "target": [
    "nsis",
    "appx"
  ],
      "icon": "assets/icons/app-icon.ico",
      "artifactName": "my-vocabulary-setup-${version}.${ext}"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "icon": "assets/icons/app-icon.icns",
      "artifactName": "my-vocabulary-setup-${version}.${ext}"
    },
    "appx": {
  "displayName": "My_Vocabulary",
  "publisherDisplayName": "whiw",
  "identityName": "whiw.MyVocabulary",
  "publisher": "CN=4175687F-AEEF-4269-BC40-B06FFFB51FD0", 
  "backgroundColor": "#ffffff",
  "logo": "assets/icons/StoreLogo.png",              
  "square150x150Logo": "assets/icons/Square150x150Logo.png",  
  "square44x44Logo": "assets/icons/Square44x44Logo.png"
}
  },
  "keywords": [],
  "author": "whiw",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
